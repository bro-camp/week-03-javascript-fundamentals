{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build All",
      "type": "shell",
      "group": {
        "kind": "build",
        "isDefault": false,
      },
      "command": "build.bat",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      }
    },
    {
      "label": "Build Separate File",
      "type": "shell",
      "group": {
        "kind": "build",
        "isDefault": true,
      },
      "command": "echo",
      "args": [
        "NO BUILD TASK CONFIGURED"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      }
    },
    {
      "label": "Run Separate File",
      "type": "shell",
      "group": {
        "kind": "test",
        "isDefault": true,
      },
      "command": "node",
      "args": [
        "${file}"
      ],
      "presentation": {
        "echo": false,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      }
    },
  ]
}
